@model IEnumerable<Owner>
@{
    ViewData["Title"] = "Автовалон";
}

<h1>База данных</h1>

<table class="table">
    <thead>
        <tr><th>Имя</th><th>Фамилия</th><th>Возраст</th> <th>Email</th></tr>
    </thead>
    <tbody>        
        @foreach (var owner in Model)
        {
            <tr >
                    <td >@owner.Name</td>
                    <td>@owner.SurName</td>
                    <td>@owner.Age</td>
                    <td>@owner.Email</td>
                <td>
                    <form asp-controller="Owner" method="get" asp-action="EditOwner" asp-route-id="@owner.Id">
                    <button>Изменить</button>
                    </form></td>
                    <td>
                    <form method="get" asp-action="Delete" asp-route-id="@owner.Id">
                        <button>Удалить</button>
                    </form>
                    </td>

            </tr>
        }
    </tbody>
</table>